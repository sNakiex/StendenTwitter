{% extends 'base.twig' %}
{% block content %}
    {% if not isSinged %}
        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">
            <div class="container">
                <div class="col-lg-6">
                    <h1>Hello, world!</h1>
                    <p>Welkom op {{ siteTitle }}! Verbind met je vrienden — en andere fascinerende personen. Ontvang updates over de dingen waarin jij geïnteresseerd bent. En bekijk hoe gebeurtenissen zich uitpakken, in realtime, vanuit iedere hoek.</p>
                </div>
                <div class="col-lg-6">

                    <h2>Nieuw op Stenden Twitter?</h2>
                    <a href="{{ baseurl }}/aanmelden" type="submit" class="btn btn-success">Account aanmaken</a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <!-- Example row of columns -->
            <div class="row">
                <div class="col-lg-12">
                    <form action="{{ baseurl }}/addMessage" method="post">
                        <div class="form-group">
                            <textarea class="form-control" name="tweet" id="tweet" placeholder="Plaats een tweet"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Plaatsen</button>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-lg-12">
            <h2>Laatste Tweets</h2>
        </div>
        {% for item in laatsteStweets %}
            <div class="col-md-12">
                <p><img style="width:50px;height:50px;" src="{{ baseurl }}/uploads/{{ item.userId|avatar }}"><a href="{{baseurl }}/profile/{{ item.userId }}"> {{ item.userId|userName }}</a></p>
                <p>{{ item.message }}</p>
            </div>
        {% endfor %}
    </div> <!-- /container -->

    <div class="container">
        <div class="row">
            <hr>
            <footer>
                <p>&copy; StendenTwitter 2015</p>
            </footer>
        </div>
    </div>
{% endblock %}